<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity">

    <TextView
        android:id="@+id/title_korean"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fontFamily="@font/thejamsil_5_bold"
        android:textColor="#1F63E7"
        android:textSize="64sp"
        tools:text="음성페이" />

    <TextView
        android:id="@+id/title_english"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_korean"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/thejamsil_3_regular"
        android:textColor="#000000"
        android:textSize="24sp"
        tools:text="UMMSUNG Pay" />

</RelativeLayout>