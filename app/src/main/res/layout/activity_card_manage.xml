<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CardManageActivity">

    <TextView
        android:id="@+id/manage_check"
        android:layout_width="319dp"
        android:layout_height="49.49dp"
        android:background="@drawable/button_next"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/manage_bookmark"
        android:fontFamily="@font/nanum_square_b"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:text="카드목록 확인"
        android:textAlignment="center"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/manage_bookmark"
        android:layout_width="319dp"
        android:layout_height="49.49dp"
        android:background="@drawable/button_next"
        app:layout_constraintTop_toBottomOf="@id/manage_check"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/manage_delete"
        android:fontFamily="@font/nanum_square_b"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:text="즐겨찾기 카드"
        android:textAlignment="center"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/manage_delete"
        android:layout_width="319dp"
        android:layout_height="49.49dp"
        android:background="@drawable/button_next"
        app:layout_constraintTop_toBottomOf="@id/manage_bookmark"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fontFamily="@font/nanum_square_b"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:text="카드 삭제"
        android:textAlignment="center"
        android:gravity="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal">

    <Button
        android:id="@+id/button_left"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <Button
        android:id="@+id/button_right"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        app:layout_constraintRight_toRightOf="parent"
        />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>