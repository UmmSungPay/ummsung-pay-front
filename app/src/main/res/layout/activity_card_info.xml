<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CardInfoActivity">

    <TextView
        android:id="@+id/page_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"
        android:textSize="18sp"
        android:textColor="#000000"
        android:fontFamily="@font/thejamsil_5_bold"
        android:text="카드 추가" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/page_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"
        android:background="#F5F5F5" />

    <TextView
        android:id="@+id/card_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/line"
        app:layout_constraintBottom_toTopOf="@id/card_number"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="18dp"
        app:layout_constraintVertical_chainStyle="packed"
        android:fontFamily="@font/nanum_square"
        android:textSize="16sp"
        android:textColor="#4F4F4F"
        android:text="카드이름"/>

    <TextView
        android:id="@+id/card_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/card_name"
        app:layout_constraintBottom_toTopOf="@id/validity"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="21dp"
        android:layout_marginStart="18dp"
        app:layout_constraintVertical_chainStyle="packed"
        android:fontFamily="@font/nanum_square"
        android:textSize="16sp"
        android:textColor="#4F4F4F"
        android:text="카드번호" />

    <TextView
        android:id="@+id/validity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/card_number"
        app:layout_constraintBottom_toTopOf="@id/cvc_number"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="21dp"
        android:layout_marginStart="18dp"
        app:layout_constraintVertical_chainStyle="packed"
        android:fontFamily="@font/nanum_square"
        android:textSize="16sp"
        android:textColor="#4F4F4F"
        android:text="유효기간" />

    <TextView
        android:id="@+id/cvc_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/validity"
        app:layout_constraintBottom_toTopOf="@id/button_confirm"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="21dp"
        android:layout_marginStart="18dp"
        app:layout_constraintVertical_chainStyle="packed"
        android:fontFamily="@font/nanum_square"
        android:textSize="16sp"
        android:textColor="#4F4F4F"
        android:text="CVC번호" />

    <Button
        android:id="@+id/button_confirm"
        android:layout_width="319dp"
        android:layout_height="49.49dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_next"
        android:fontFamily="@font/nanum_square_b"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="확인" />


</androidx.constraintlayout.widget.ConstraintLayout>