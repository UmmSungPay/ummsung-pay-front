<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Onboarding3Activity"
    android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/thejamsil_3_regular"
        android:textColor="#1F63E7"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:text="UMMSUNG Pay" />

    <ImageView
        android:id="@+id/onboarding3_image"
        android:layout_width="268dp"
        android:layout_height="216.72dp"
        android:src="@drawable/fingerprint_complete_image"
        app:layout_constraintBottom_toTopOf="@id/description_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/description_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:fontFamily="@font/thejamsil_5_bold"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/onboarding3_image"
        app:layout_constraintBottom_toTopOf="@id/description_detail"
        app:layout_constraintVertical_chainStyle="packed"
        android:text="지문으로 편리하게 인증하세요." />

    <TextView
        android:id="@+id/description_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/nanum_square_r"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="#696969"
        android:textSize="14sp"
        android:lineSpacingExtra="7sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/description_main"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="25dp"
        app:layout_constraintVertical_chainStyle="packed"
        android:text="음성페이의 카드 결제 인증은 지문인식으로 이루어집니다." />

    <Button
        android:id="@+id/button_next"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>