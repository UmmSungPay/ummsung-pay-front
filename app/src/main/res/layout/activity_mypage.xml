<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MypageActivity">

    <TextView
        android:id="@+id/mypageBookmark"
        android:layout_width="319dp"
        android:layout_height="49.49dp"
        android:background="@drawable/button_next"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/mypageFingerprint"
        android:fontFamily="@font/nanum_square_b"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:text="즐겨찾기 카드 등록/변경"
        android:textAlignment="center"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/mypageFingerprint"
        android:layout_width="319dp"
        android:layout_height="49.49dp"
        android:background="@drawable/button_next"
        app:layout_constraintTop_toBottomOf="@id/mypageBookmark"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/mypagePin"
        android:fontFamily="@font/nanum_square_b"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:text="지문 재등록"
        android:textAlignment="center"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/mypagePin"
        android:layout_width="319dp"
        android:layout_height="49.49dp"
        android:background="@drawable/button_next"
        app:layout_constraintTop_toBottomOf="@id/mypageFingerprint"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/mypageInstruction"
        android:fontFamily="@font/nanum_square_b"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:text="PIN 재등록"
        android:textAlignment="center"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/mypageInstruction"
        android:layout_width="319dp"
        android:layout_height="49.49dp"
        android:background="@drawable/button_next"
        app:layout_constraintTop_toBottomOf="@id/mypagePin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fontFamily="@font/nanum_square_b"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:text="사용법 다시듣기"
        android:textAlignment="center"
        android:gravity="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <Button
            android:id="@+id/button_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            app:layout_constraintRight_toRightOf="parent"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>