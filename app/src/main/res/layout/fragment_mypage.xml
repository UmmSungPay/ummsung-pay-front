<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MypageFragment">

    <TextView
        android:id="@+id/page_title"
        android:layout_width="match_parent"
        android:layout_height="82.3dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="#000000"
        android:fontFamily="@font/thejamsil_5_bold"
        android:text="마이페이지" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/page_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#F5F5F5" />

    <Button
        android:id="@+id/button_fingerprint"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_pin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        android:paddingLeft="32dp"
        android:paddingRight="15dp"
        android:background="@drawable/button_mypage"
        android:fontFamily="@font/nanum_square_b"
        android:text="지문 재등록"
        android:textColor="#4F4F4F"
        android:textSize="16sp"
        android:textAlignment="textStart"
        android:drawableRight="@drawable/arrow_right"/>

    <Button
        android:id="@+id/button_pin"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        app:layout_constraintTop_toBottomOf="@id/button_fingerprint"
        app:layout_constraintBottom_toTopOf="@id/button_instruction"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        android:paddingLeft="32dp"
        android:paddingRight="15dp"
        android:background="@drawable/button_mypage"
        android:fontFamily="@font/nanum_square_b"
        android:text="PIN번호 재등록"
        android:textColor="#4F4F4F"
        android:textSize="16sp"
        android:textAlignment="textStart"
        android:drawableRight="@drawable/arrow_right"/>

    <Button
        android:id="@+id/button_instruction"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        app:layout_constraintTop_toBottomOf="@id/button_pin"
        app:layout_constraintBottom_toTopOf="@id/button_bookmark"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        android:paddingLeft="32dp"
        android:paddingRight="15dp"
        android:background="@drawable/button_mypage"
        android:fontFamily="@font/nanum_square_b"
        android:text="음성 사용 안내 설명서"
        android:textColor="#4F4F4F"
        android:textSize="16sp"
        android:textAlignment="textStart"
        android:drawableRight="@drawable/arrow_right"/>

    <Button
        android:id="@+id/button_bookmark"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        app:layout_constraintTop_toBottomOf="@id/button_instruction"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        android:paddingLeft="32dp"
        android:paddingRight="15dp"
        android:background="@drawable/button_mypage"
        android:fontFamily="@font/nanum_square_b"
        android:text="즐겨찾기 카드 추가"
        android:textColor="#4F4F4F"
        android:textSize="16sp"
        android:textAlignment="textStart"
        android:drawableRight="@drawable/arrow_right"/>

</androidx.constraintlayout.widget.ConstraintLayout>