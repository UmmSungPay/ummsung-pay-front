<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/title_korean"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/thejamsil_5_bold"
        android:text="음성페이"
        android:textColor="#1F63E7"
        android:textSize="64sp"
        app:layout_constraintBottom_toTopOf="@id/title_english"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/title_english"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/thejamsil_3_regular"
        android:text="UMMSUNG Pay"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_korean"
        app:layout_constraintBottom_toTopOf="@id/google_login"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/google_login"
        android:layout_width="187dp"
        android:layout_height="42dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_english"
        app:layout_constraintBottom_toTopOf="@id/kakao_login"
        android:layout_marginTop="27dp"
        android:background="@drawable/button_google"
        app:layout_constraintVertical_chainStyle="packed"
        android:text="Google로 로그인" />

    <Button
        android:id="@+id/kakao_login"
        android:layout_width="187dp"
        android:layout_height="42dp"
        android:background="@drawable/button_kakao"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/google_login"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="12dp"
        app:layout_constraintVertical_chainStyle="packed"
        android:text="카카오로 로그인" />


</androidx.constraintlayout.widget.ConstraintLayout>